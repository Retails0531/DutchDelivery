<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tv_post"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:paddingTop="7dp"
        android:text="모집글 등록"
        android:textColor="#2F3553"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/et_id"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="제목"
        android:inputType="textPersonName"
        android:textColorHint="@color/black"
        android:backgroundTint = "#2F3553"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_pass"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:ems="10"
            android:hint="주문 매장"
            android:inputType="textPersonName"
            android:textColorHint="@color/black"
            android:backgroundTint = "#2F3553"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:background="@drawable/local" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/login_logo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="주문시간"
            android:paddingLeft="25dp"
            android:textColor="@color/black"
            android:textSize="19dp" />

        <TimePicker
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:background="#2F3553"
            android:timePickerMode="spinner" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_postP"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="인원"
        android:inputType="textPersonName"
        android:textColorHint="@color/black"
        android:backgroundTint = "#2F3553"/>

    <EditText
        android:id="@+id/et_postF"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="배달비"
        android:inputType="textPersonName"
        android:textColorHint="@color/black"
        android:backgroundTint = "#2F3553"/>

    <EditText
        android:id="@+id/et_post"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:gravity="top"
        android:padding="10dp"
        android:ems="100"
        android:hint="상세 내역을 입력해주세요."
        android:inputType="textPersonName"
        android:textColorHint="@color/black"
        android:background="@drawable/memo_border"/>


    <Button
        android:id="@+id/btn_posting"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:text="등록"
        android:background="#2F3553"
        android:textColor="#FFFFFF"/>

</LinearLayout>